{
  "manifest_version": 3,
  "name": "Steam Pattern & Float Checker",
  "version": "1.0",
  "description": "Displays paint template numbers and float/wear info on Steam Market items.",
  "content_scripts": [
    {
      "matches": ["*://steamcommunity.com/market/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
  ,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["page_inject.js"],
      "matches": ["*://*.steamcommunity.com/*", "*://steamcommunity.com/*"]
    }
  ]
}
